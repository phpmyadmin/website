{
    // Show more errors..
    "maxerr" : 1000,

    // Globals
    "jquery" : true,

    // Stricter checking..
    "curly" : true,
    "immed" : true,
    "indent" : 4,
    "latedef" : true,
    "noarg" : true,
    "noempty" : true,
    "unused" : false,
    "trailing" : true,

    // Relaxing rules..
    "sub" : false,
    "funcscope" : false,
    "laxbreak" : false
}
