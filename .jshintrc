{
    // Show more errors
    "maxerr" : 2300,

    // Globals
    "jquery" : true,

    // Stricter checking
    "curly"    : true,
    "immed"    : true,
    "indent"   : 8,
    "latedef"  : true,
    "noarg"    : true,
    "noempty"  : true,
    "unused"   : false,
    "trailing" : true,

    // Relaxing rules
    "sub"       : false,
    "funcscope" : false,
    "laxbreak"  : false
}
